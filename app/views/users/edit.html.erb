<div class="containar">
  <div class="row no-gutters">
    <div class="ax-auto">
      <h1>User info</h1>
      <div class="form-body p-4">
        <% if @user.errors.any? %>
          <%= @user.errors.count %>error prohibited this obj from being saved:
          <% @user.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
        <%= form_with model: @user, local:true do |f| %>
        <h3>Name</h3>
          <div class="input-group">
          <%= f.text_field :name, class:"form-control", placeholder:"name" %>
          </div>
        <h3>Image</h3>
          <div class="input-group">
            <%= f.attachment_field :profile_image, placeholder: "profile_image" %>
          </div>
        <h3>Introduction</h3>
          <%= f.text_area :introduction, class:"form-control", placeholder:"introduction" %>
          <hr>
          <%= f.submit 'Update User', class:"btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>


