<!--ユーザー情報-->
<h1>User info</h1>
<div>
  <%= attachment_image_tag current_user, :profile_image%>
  <p>name :<%= current_user.name %></p>
  <p>introduction :<%= current_user.introduction %></p>
</div>
<% if @user.id == current_user.id %>
  <%= link_to "edit" ,edit_user_path(current_user.id) %>
<% else %>
  <%= link_to "edit" ,user_path(current_user.id) %>
<% end %>

<!--投稿の新規作成画面-->
<h1>New Book</h1>
<%= form_with model:@book, local:true do |f|%>
  <p>title</p>
  <%= f.text_field :title,autofocus:true %>
  <p>body</p>
  <%= f.text_field :body ,autofocus:true %>
  <%= f.submit "create" %>
<% end %>

<!--現在登録しているユーザーの全てを表示する記述-->
<h2>Users</h2>
<% @users.each do |user| %>
  <P><%= attachment_image_tag user, :profile_image %></P>
  <p><%= user.name %></p>
  <%= link_to "show", user_path(user) %>
<% end %>