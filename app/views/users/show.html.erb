<%= flash[:notice] %>

<!--ユーザー情報-->
<h1>User info</h1>
<div>
  <%= attachment_image_tag @user, :profile_image%>
  <p>name :<%= @user.name %></p>
  <p>introduction :<%= @user.introduction %></p>
</div>
<% if @user.id == current_user.id %>
  <%= link_to "edit" ,edit_user_path(current_user.id) %>
<% else %>
  <%= link_to "edit" ,user_path(current_user.id) %>
<% end %>

<!--投稿の新規作成画面-->
<h1>New Book</h1>
<%= form_with model:@book, local:true do |f|%>
  <p>title</p>
  <%= f.text_field :title,autofocus:true %>
  <p>body</p>
  <%= f.text_field :body ,autofocus:true %>
  <%= f.submit "create" %>
<% end %>

<!--current_userの投稿一覧-->
<h1>Books</h1>
<div>
  <% @books.each do |book| %>
    <p><%= attachment_image_tag book.user, :profile_image %></p>
    <p><%= link_to book.user.name, user_path(current_user) %></p>
    <p><%= link_to book.title, book_path(book) %></p>
    <p>body：<%= book.body %></p>
  <% end %>
</div>