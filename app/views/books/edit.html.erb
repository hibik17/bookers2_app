<div class="container mx-auto">
  <div class="row">
    <div class="container col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h1>Editing Book</h1>
  <div class="form-body p-4 ">
    <% if @book.errors.any? %>
          <%= @book.errors.count %>errors
          <% @book.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
        <%= form_with model: @book, local:true do |f| %>
        <h3>Title</h3>
          <div class="input-group">
          <%= f.text_field :title, class:"form-control", placeholder:"title" %>
          </div>
        <h3>Opinion</h3>
          <%= f.text_area :body, class:"form-control", placeholder:"body" %>
          <hr>
          <div>
            <%= f.submit 'Update Book', class:"mt-3 btn btn-lg btn-block btn-dark mt-4" %>
          </div>
        <% end %>
      </div>
  <%= link_to "Show" ,book_path(@book) %>
  |
  <%= link_to "Back" ,books_path %>
    </div>
  </div>
</div>





