<%= flash[:notice] %>

<!--ログインしているユーザーの情報一覧-->
<h1>User info</h1>
<div>
  <%= attachment_image_tag @books.user, :profile_image%>
  <p>name :<%= @books.user.name %></p>
  <p>introduction :<%= @books.user.introduction %></p>
</div>
<% if @books.user_id == current_user.id%>
  <%= link_to "edit" ,edit_user_path(current_user) %>
<% else %>
  <%= link_to "edit" ,user_path(current_user) %>
<% end %>
<!--投稿の新規作成-->
<h1>New book</h1>
<div>
  <%= form_with model:@book, local:true do |f|%>
    <p>title</p>
    <%= f.text_field :title %>
    <p>body</p>
    <%= f.text_field :body  %>
    <%= f.submit "create" %>
  <% end %>
</div>

<!--bookの詳細ページの一覧-->
<h1>Book detail</h1>
<%= attachment_image_tag @books.user, :profile_image %>
<%= link_to @books.user.name , user_path(@books.user) %>
<%= link_to @books.title , book_path(@books) %>
<%= @books.body %>
<% if @books.user_id == current_user.id %>
  <%= link_to "edit" , edit_book_path(@books) %>
  <%= link_to "destroy", book_path, method: :delete, data: { confirm: '本当に削除しますか？' } %>
<% end %>






